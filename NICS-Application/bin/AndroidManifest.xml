<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nics_application"
    android:versionCode="1"
    android:versionName="1.0" >

    
    <uses-permission 
        android:name="android.permission.SET_DEBUG_APP">
        
    </uses-permission>
    
    
    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/nics"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.example.activities.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.activities.LogInActivity"
            android:label="@string/title_activity_log_in" >
        </activity>
        
        <activity
            android:name="com.example.activities.AccountListViewActivity"
            android:label="@string/title_activity_account_list_view" >
        </activity>
        <activity
            android:name="com.example.activities.AccountViewActivity"  
            android:label="@string/title_activity_account_view" > 
        </activity>
        <activity
            android:name="com.example.activities.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="com.example.activities.AccountSetupActivity"
            android:label="@string/title_activity_account_setup" >
        </activity>
        <activity
            android:name="com.example.activities.TransactionViewActivity"
            android:label="@string/title_activity_transaction_view">
        </activity>
        <activity
            android:name="com.example.activities.SpendingReportViewActivity"
            android:label="@string/title_activity_spending_report_view">
        </activity>
        <activity
            android:name="com.example.activities.ReportViewActivity"
            android:label="@string/title_activity_report_view">
        </activity>
        <activity
            android:name="com.example.activities.MainActivity"
            android:label="@string/title_activity_main">
        </activity>
    </application>

</manifest>
